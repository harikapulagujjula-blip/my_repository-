    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const progressFill = document.getElementById('progressFill');
            const updateBtn = document.getElementById('updateProgress');
            const startBtn = document.getElementById('startBtn');
            
            // Initialize progress
            progressFill.style.width = '30%';
            
            // Update progress on button click
            updateBtn.addEventListener('click', function() {
                const weight = document.getElementById('weight').value;
                const energy = document.getElementById('energy').value;
                const meals = document.getElementById('meals').value;
                const water = document.getElementById('water').value;
                
                let progress = 30;
                
                if (weight && weight > 0) progress += 10;
                if (energy === 'medium') progress += 15;
                if (energy === 'high') progress += 20;
                if (meals && meals >= 3) progress += 15;
                if (water && water >= 6) progress += 10;
                
                progress = Math.min(progress, 100);
                
                progressFill.style.width = `${progress}%`;
                
                alert(`Your progress has been updated to ${progress}%! Keep up the good work!`);
            });
            
            startBtn.addEventListener('click', function() {
                alert('Welcome to your nutrition journey! We recommend consulting with a healthcare provider for personalized advice.');
            });
            
            // Animate timeline items on scroll
            const timelineItems = document.querySelectorAll('.timeline-item');
            
            function checkScroll() {
                timelineItems.forEach(item => {
                    const position = item.getBoundingClientRect();
                    
                    if (position.top < window.innerHeight * 0.85) {
                        item.style.opacity = 1;
                        item.style.transform = 'translateX(0)';
                        item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    }
                });
            }
            
            // Initialize opacity for animation
            timelineItems.forEach(item => {
                item.style.opacity = 0;
                item.style.transform = 'translateX(-20px)';
            });
            
            window.addEventListener('scroll', checkScroll);
            checkScroll(); // Initial check
        });
    </script>
